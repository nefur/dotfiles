{
  // https://github.com/airbnb/javascript
  "extends": "airbnb",

  // Brithon overrides
  "env": {
    "browser": true,
    "node": true,
    "jquery": true
  },

  "globals": {
    "birchpress": false,
    "brithon": false
  },

  "rules": {
    "strict": [2, "global"],

    // For ES5
    "no-var": 0,
    "prefer-const": 0,

    "comma-dangle": [2, "never"],

    "new-cap": 0,

    "yoda": [1, "never"]
  }
}
